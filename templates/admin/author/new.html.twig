{% extends 'base.html.twig' %}

{% block title %}Ajout d'auteur{% endblock %}

{% block body %}
    <div class="max-w-2xl mx-auto bg-white p-6 rounded-lg shadow">
        <h1 class="text-2xl font-bold mb-6">Ajout d'auteur</h1>

        {{ form_start(form) }}
        <div class="space-y-4">
            {{ form_row(form.name, { label: 'Nom', attr: { class: 'w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500' } }) }}
            {{ form_row(form.dateOfBirth, { label: 'Date de naissance', attr: { class: 'w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500' } }) }}
            {{ form_row(form.dateOfDeath, { label: 'Date de décès', attr: { class: 'w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500' } }) }}
            {{ form_row(form.nationality, { label: 'Nationalité', attr: { class: 'w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500' } }) }}
            {{ form_row(form.books, { label: 'Livres', attr: { class: 'w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500' } }) }}
        </div>

        <div class="mt-6">
            <button type="submit" class="w-full px-4 py-2 bg-blue-600 text-white font-semibold rounded-md hover:bg-blue-700 transition">
                Envoyer
            </button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
